<launch>
  <machine address="localhost" name="local" />
  <arg name="vision_computer" default="local"/>

  <arg name="namespace" />
  <arg name="camera_name" />
  <arg name="serial_number" />
  <arg name="frame_rate" default="30" />
  <arg name="video_mode" default="format7_mode1" />

  <arg name="root_path" value="$(find riptide_hardware)/launch/../.." unless="$(eval arg('vision_computer') != 'local')"/>
  <arg name="root_path" value="$(env OSU_UWRT_PATH)" if="$(eval arg('vision_computer') != 'local')" />
  <arg name="config_path" value="$(arg root_path)/riptide_hardware/cfg"/> 

  <!--mode0: Max res at 1288 x 964-->
  <!--mode1: Half res at 644 x 482-->

  <group ns="$(arg camera_name)">

    <node machine="$(arg vision_computer)" pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />
    <node machine="$(arg vision_computer)" pkg="nodelet" type="nodelet" name="camera_nodelet"
          args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager" >

      <param name="frame_id" value="$(arg namespace)/$(arg camera_name)_optical" />
      <param name="serial" value="$(arg serial_number)" />
      <param name="frame_rate" value="$(arg frame_rate)" />
      <param name="video_mode" value="$(arg video_mode)" />
      <param name="camera_info_url" value="file:///$(arg config_path)/$(arg serial_number).yaml" />
    </node>

  </group>

</launch>
